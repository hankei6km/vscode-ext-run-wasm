{
  "compilerOptions": {
    "rootDir": "./src",
    "skipLibCheck": true,
    "lib": ["es2020", "webworker"],
    "types": ["node", "vscode", "@types/mocha"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./out",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "stripInternal": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", ".vscode-test-web", "out"]
}
